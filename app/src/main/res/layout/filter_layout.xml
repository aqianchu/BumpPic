<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#1c1c1c"
    >
    <ImageView
        android:id="@+id/img_beam"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="center"
        android:layout_margin="@dimen/tendp"
        android:src="@drawable/filter_bg"
        />
    <TextView
        android:id="@+id/txt_information_beam"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:textColor="@color/applicationYellow"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_beam"
        android:text="beam_txt" />
    <TextView
        android:id="@+id/received_txt_beam"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:visibility="gone"
        android:textColor="@color/applicationYellow"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_information_beam"
        android:text="placeholder_output_beam" />

</RelativeLayout>