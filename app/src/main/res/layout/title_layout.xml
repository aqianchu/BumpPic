<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="@dimen/title_height">

    <Button
        android:id="@+id/back_bt"
        android:layout_width="@dimen/back_height"
        android:background="@drawable/back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/title_marginleft"
        android:layout_height="@dimen/back_height" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="@string/mine"
        android:textSize="@dimen/title_text_size"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/title_right_bt"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="@string/send"
        android:visibility="gone"
        android:textSize="@dimen/login_title_text_small"
        android:background="@drawable/transparent_shape"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/title_marginleft"
        android:layout_height="wrap_content" />
</RelativeLayout>