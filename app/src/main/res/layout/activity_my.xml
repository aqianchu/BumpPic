<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <com.qihoo.bumppic.view.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/example_picture_2" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/user_img"
                    android:text="静静"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/user_dsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/user_img"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toRightOf="@id/user_img"
                    android:text="一个早7晚1一天忙不完的产品妹纸" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/mycollect_relativelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="我的收藏"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="@dimen/my_item_height"
                        android:layout_height="@dimen/my_item_height"
                        android:layout_alignParentRight="true"
                        android:padding="18dp"
                        android:layout_centerVertical="true"
                        android:layout_margin="18dp"
                        android:background="@drawable/enter"
                        android:textSize="22sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/myfootprint_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="我的足迹"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="@dimen/my_item_height"
                        android:layout_height="@dimen/my_item_height"
                        android:layout_alignParentRight="true"
                        android:layout_margin="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/enter"
                        android:textSize="22sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/message_user_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="我的消息"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="@dimen/my_item_height"
                        android:layout_height="@dimen/my_item_height"
                        android:layout_alignParentRight="true"
                        android:layout_margin="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/enter"
                        android:textSize="22sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="#EDEDED" />

                <RelativeLayout
                    android:id="@+id/mytag_user_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:text="我的标签"
                        android:textSize="20sp" />


                    <TextView
                        android:layout_width="@dimen/my_item_height"
                        android:layout_height="@dimen/my_item_height"
                        android:layout_alignParentRight="true"
                        android:layout_margin="18dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/enter"
                        android:textSize="22sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
